#!/bin/bash
mkdir $HOME/opt
cd $HOME/opt
git clone https://github.com/UG4/ughub
mkdir $HOME/opt/ug4
cd $HOME/opt/ug4
../ughub/ughub init
../ughub/ughub install Examples
cd $HOME/opt/ug4
mkdir build
cd build
cmake -DCMAKE_CXX_COMPILER=clang++ -DCMAKE_C_COMPILER=clang -DCMAKE_BUILD_TYPE=Release -DConvectionDiffusion=ON ..
make 
